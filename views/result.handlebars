<div class="container mt-5">
  <div class="d-flex flex-column align-items-center">
    <h2>URL Shortener</h2>
    <img src="https://image.flaticon.com/icons/png/512/4299/4299106.png" alt="" style="width: 20%" class="my-5">
    <div class="d-flex flex-column align-items-center">
      <div>Success! Please use this link:</div>
      <h4 class="mt-3" id="shortenUrl">{{ shortenUrl }}</h4>
      <button class="btn btn-primary mt-3" onclick="copyUrl()" id="copyButton">Copy</button>
    </div>
  </div>
</div>

<script>
  function copyUrl () {
    const shortenUrl = document.querySelector('#shortenUrl')
    const copyButton = document.querySelector('#copyButton')
    const selection = window.getSelection()
    const range = document.createRange()
    selection.removeAllRanges()
    range.selectNode(shortenUrl)
    selection.addRange(range)
    document.execCommand('copy')    
    copyButton.textContent = 'Copied!'
  }
</script>